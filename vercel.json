{
  "version": 2,
  "framework": null,
  "buildCommand": null,
  "installCommand": null,
  "outputDirectory": ".",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Content-Type": "application/json"
      }
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|pdf|html))$",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NOTION_API_KEY": "@notion_api_key",
    "NOTION_STUDENTS_DB_ID": "@notion_students_db_id",
    "NOTION_INQUIRIES_DB_ID": "@notion_inquiries_db_id",
    "NOTION_COURSES_DB_ID": "@notion_courses_db_id"
  }
}