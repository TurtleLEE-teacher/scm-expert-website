{
  "version": 2,
  "buildCommand": "echo 'Static site - no build required'",
  "outputDirectory": ".",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/)(?!.*\\.).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NOTION_API_KEY": "@notion_api_key",
    "NOTION_STUDENTS_DB_ID": "@notion_students_db_id",
    "NOTION_INQUIRIES_DB_ID": "@notion_inquiries_db_id",
    "NOTION_COURSES_DB_ID": "@notion_courses_db_id"
  }
}