# Notion API 설정
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_database_id_here

# 데이터베이스 설정
DB_TYPE=sqlite
DB_PATH=database/scm_expert.db

# 이메일 설정 (선택사항)
SMTP_HOST=smtp.gmail.com
